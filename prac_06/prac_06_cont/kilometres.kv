BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text:''
            size_hint_x: (0.7)
            id: input_number
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: (0.3)
            Button:
                text: 'Up'
                on_press:
                    app.handle_calculate(int(input_number.text))
            Button:
                text: 'Down'
                on_press:
                    app.handle_calculate(int(input_number.text)-1)
    Button:
        text: 'Convert m to km'
    Label:
        text: ''
        id: output_label
